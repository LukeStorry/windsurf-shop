extends ../layout

block content
  br
  .row
    .col-md-4.offset-md-2
      h1 #{subtitle}
      br
      for message in messages
        .alert.alert-danger= message
      form(action="/user/signin" method="post")
        .form-group
          label(for="email") Email
          input.form-control(type="text", id="email", name="email")
        .form-group
          label(for="password") Password
          input.form-control(type="password", id="password", name="password")
          input.form-control(type="hidden", name="_csrf", value=csrfToken)
        button.btn.btn-primary(type="submit") #{subtitle}

      br

      | Not got an account?  You can sign up 
      a(href="/user/signup") here
      |.
