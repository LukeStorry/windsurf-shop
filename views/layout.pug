include components/navbar

//- Overall Layout template, with navbar and container for page.

doctype html
html(xmlns="http://www.w3.org/1999/xhtml" lang="en-GB" xml:lang="en-GB")
  head
    meta(charset='utf-8' )
    meta(name='viewport', content='width=device-width, initial-scale=1.0' )
    meta(name='description', content='The best windsurfing equipment on the web' )
    meta(name="author", content="Luke Storry") 

    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css", integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO", crossorigin="anonymous")
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.2.0/css/all.css', integrity='sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ', crossorigin='anonymous')
    link(rel="stylesheet", href="/stylesheets/style.css")
    script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous")
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js', integrity='sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy', crossorigin='anonymous')

    - var brandname= "Windsurf Shop"
    if subtitle
      title= brandname + " | " + subtitle
    else
      title= brandname

  body

    +navbar("navvybar")
      +navbar_group
        +navbar_item("Home", "/") 
        +navbar_dropdown("Products", "/products")
          +navbar_dropdown_item("Boards", "/products/boards")
          +navbar_dropdown_item("Sails", "/products/sails")
          +navbar_dropdown_item("Masts", "/products/masts")
          +navbar_dropdown_item("Booms", "/products/booms")
          +navbar_dropdown_item("Design yobur own", "/design")
          //-+navbar_dropdown_item("Accessories", "/products/accessories")
          //-+navbar_dropdown_item("Wetsuits", "/products/wetsuits", true)
          //-+navbar_dropdown_item("Clothing", "/products/clothing")
        +navbar_item("About", "/about" ) 
      +navbar_group
        +navbar_search()
      +navbar_group
        +navbar_dropdown("User", "#")
          if loggedIn
            +navbar_dropdown_item("Account", "/user/account")
            +navbar_dropdown_item("Log Out", "/user/logout")
          else
            +navbar_dropdown_item("Sign In", "/user/signin")
            +navbar_dropdown_item("Sign Up", "/user/signup")
        +navbar_cart("/cart" ) 


    .container
      block content
